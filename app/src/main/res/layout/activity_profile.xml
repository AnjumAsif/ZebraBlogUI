<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.ProfileActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:id="@+id/imageView"
            android:src="@drawable/ic_sachin_1"
            android:contentDescription="@string/app_name" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Sachin Tendulkar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            app:layout_constraintEnd_toStartOf="@+id/textViewTwitter"
            app:layout_constraintBottom_toTopOf="@id/textViewUserCity"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@+id/textViewTitle"
            android:layout_marginTop="20dp"
            android:text="t"
            android:background="@drawable/ic_circle"
            android:textSize="25sp"
            android:padding="5dp"
            android:id="@+id/textViewTwitter"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/textViewFacebook"
            android:layout_marginEnd="6dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/textViewFacebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@+id/textViewTwitter"
            android:layout_marginTop="20dp"
            android:text="f"
            android:background="@drawable/ic_circle"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@+id/textViewFacebook"
            android:layout_marginTop="20dp"
            android:text="in"
            android:background="@drawable/ic_circle"
            android:textSize="25sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:id="@+id/textView3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/textViewUserCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Florence, Italy"
            android:padding="5dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_person_pin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"/>
    <TextView
            android:id="@+id/textViewBodyMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewUserCity"
            android:text="@string/body_msg_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"/>
    <TextView
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:alpha=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewBodyMsg"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Continue"
            android:textAllCaps="true"
            android:padding="10dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/separator"/>
</androidx.constraintlayout.widget.ConstraintLayout>